extends base.pug

block content
  h4 Update Video
  form(method="POST") 
    input(type="text", name="title", value=`${selectedVideo.title}`,
          placeholder="Video Title", autocomplete="off", required, maxlength=40)

    input(type="text", name="description", value=`${selectedVideo.description}`, 
          autocomplete="off", placeholder="Description", minlength=20)
  
    input(type="text", name="hashtags", placeholder="Hashtags separated by comma",
     required, autocomplete="off", value=`${selectedVideo.hashtags.join()}`)   
    input(type="submit", value="Save")