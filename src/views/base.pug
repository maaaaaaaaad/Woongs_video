doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    title #{pageTitle} | #{siteName}
  body
    
    header
      h1=pageTitle
      nav
        ul 
          li 
            a(href="/") Home

          if loggedIn
            li 
              a(href="/join") Log out
            li 
              a(href="my-profile") Profile of #{loggedInUser.userName}

          else
            li 
              a(href="/join") Join
            li 
              a(href="/login") Login
          li 
            a(href="/video/upload") Upload Video
          li 
            a(href="/search") Search 
      
    main
      block content

  footer
    include partials/footer.pug