extends base.pug

block content
  if errorMessage
    h5 #{errorMessage}

  form(method="POST", enctype="multipart/form-data")
    label(for="video") Video File
    input(type="file", accept="video/*", required, id="video", name="video")
    input(type="text", name="title", placeholder="Video Title", 
          autocomplete="off",required maxlength=40)

    input(type="text", name="description", placeholder="Description",
     required, autocomplete="off" minlength=20)
     
    input(type="text", name="hashtags", placeholder="Hashtags separated by comma",
     required, autocomplete="off")    
    input(type="submit", value="Upload")